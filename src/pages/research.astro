<style>
  ol {
    padding: 0;
    margin: 2rem;
  }

  li {
    font-size: 1.2rem;
    list-style: none;
    margin-bottom: 1rem;
    padding-left: 2rem;
    text-indent: -2rem;
  }

  a {
    border-bottom: 2px solid var(--primary-color);
    margin: 0 1ch 0 0.5ch;
    padding-bottom: 2px;
    text-decoration: none;
  }

  a:hover {
    border-bottom-width: 1px;
  }

  em::before {
    content: "\200B"; /* ensure line-breaking before <em/> is possible */
  }

  @media (max-width: 767px) {
    h2 {
      text-align: center;
    }

    ol {
      margin: 2rem 0;
    }

    li {
      font-size: 1rem;
    }
  }
</style>
