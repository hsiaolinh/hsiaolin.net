---
import BaseLayout from "@layouts/BaseLayout.astro";
import Picture from "@components/Picture.astro";

import HearMyNameButton from "@components/HearMyNameButton.astro";

import profileImg from "@img/Hsiaolin_Hsieh.jpeg";

import email from "@icons/email.svg?raw";
import orcid from "@icons/orcid.svg?raw";
import linkedin from "@icons/linkedin.svg?raw";

export interface Props {
  title?: string;
  description?: string;
  children: any;
}

const defaultTitle = "Hsiaolin Hsieh";
const defaultDescription =
  "Hsiaolin Hsieh is an educational researcher who uses data science " +
  "to investigate issues relating to equity for multi-lingual learners.";

const { title = defaultTitle, description = defaultDescription } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article>
    <h1>Hsiaolin Hsieh <span class="pronouns">(she/her)</span></h1>
    <div class="name">
      謝筱琳
      <HearMyNameButton />
    </div>
    <aside>
      <Picture
        src={profileImg}
        alt="Hsiaolin Hsieh Profile Image"
        widths={[250, 350, 500, 700]}
        sizes="(max-width: 1200px) 250px, 350px"
        loading="eager"
        width={350}
        height={463}
      />
      <a
        href="mailto:hsiaolin.hsieh@gmail.com"
        target="_blank"
        aria-label="Email Hsiaolin"
        class="saturate-on-hover"
      >
        <Fragment set:html={email} />
      </a>
      <a
        href="https://orcid.org/0000-0002-1930-4026"
        target="_blank"
        aria-label="ORCID for Hsiaolin Hsieh: 0000-0002-1930-4026"
        class="saturate-on-hover"
      >
        <Fragment set:html={orcid} />
      </a>
      <a
        href="https://www.linkedin.com/in/hsiaolin"
        target="_blank"
        aria-label="LinkedIn Profile for Hsiaolin Hsieh"
        class="saturate-on-hover"
      >
        <Fragment set:html={linkedin} />
      </a>
    </aside>
    <slot />
  </article>

  <style>
    h1 {
      margin-bottom: 0;

      & .pronouns {
        font-weight: normal;
        font-size: 1rem;
      }
    }

    .name {
      align-items: center;
      display: flex;
      font-size: 2.6em;
      gap: 0.5em;

      & a {
        display: flex;
      }

      & :global(picture) {
        display: flex;
      }
    }

    aside {
      margin: 0 0 0 1em;
      text-align: center;
      float: right;

      & a {
        text-decoration: none;
      }

      & :global(picture) {
        display: block;
        min-height: 250px;
      }

      & :global(img) {
        max-width: 350px;
        margin-bottom: 1em;
        border-radius: 50%;
        margin-top: -50px;
        outline: 1px solid var(--text-main);
      }

      & :global(svg) {
        height: 48px;
        width: 48px;
        margin: 0 1em;
      }
    }

    @media (max-width: 1200px) {
      aside :global(img) {
        max-width: 250px;
      }
    }

    @media (max-width: 767px) {
      h1 {
        display: flex;
        flex-direction: column;
      }

      .name {
        justify-content: center;
      }

      aside {
        float: none;
        margin: 0;
      }

      aside :global(img) {
        margin-top: 0;
      }
    }

    @media (max-width: 400px) {
      .name {
        flex-direction: column;
        gap: 0;
        margin-bottom: 0.5em;
      }

      aside {
        margin-bottom: 2em;
      }
    }
  </style>
</BaseLayout>
